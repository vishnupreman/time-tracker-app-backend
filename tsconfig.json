{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["node", "express"],   // include Node and Express types
    "noImplicitAny": true
  },
  "include": ["src/**/*"],          // make sure TS picks up all src files
  "exclude": ["node_modules"]
}
